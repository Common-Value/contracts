{
  "name": "@commonvalue/contracts",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "chain": "hardhat node --network hardhat --hostname 0.0.0.0 --export-all ./generated/hardhat_contracts.json",
    "test": "hardhat test --network hardhat",
    "compile": "rm -rf ./typechain ./generated && mkdir ./generated && hardhat compile --force",
    "export": "yarn export-core && yarn export-subgraph",
    "export-core": "rm -rf ../core/src/generated/* && cp -r ./generated/* ../core/src/generated && cp -r ./typechain ../core/src/generated",
    "export-subgraph": "rm -rf ../subgraph/abis/* && cp -r ./generated/artifacts/contracts/* ../subgraph/abis",
    "deploy": "hardhat deploy --export-all ./generated/hardhat_contracts.json",
    "verify": "hardhat etherscan-verify",
    "lint": "eslint --config ./.eslintrc --ignore-path ./.eslintignore ./deploy/**/*.ts ./scripts/**/*.ts ./test/**/*.ts ./helpers/**/*.ts",
    "solhint": "solhint ./contracts/**/*.sol",
    "format": "yarn prettier -w ./deploy/**/*.ts ./scripts/**/*.ts ./test/**/*.ts ./helpers/**/*.ts contracts/**/*.sol ",
    "format:check": "yarn prettier -c ./deploy/**/*.ts ./scripts/**/*.ts ./test/**/*.ts ./helpers/**/*.ts ./contracts/**/*.sol "
  },
  "dependencies": {
    "@atixlabs/hardhat-time-n-mine": "^0.0.5",
    "@commonvalue/core": "^0.0.2",
    "@defi-wonderland/smock": "^2.0.7",
    "@eth-optimism/hardhat-ovm": "^0.2.4",
    "@ethereum-waffle/ens": "^3.3.1",
    "@ethereumjs/vm": "^5.7.1",
    "@ethersproject/abi": "^5.5.0",
    "@ethersproject/abstract-provider": "^5.5.1",
    "@ethersproject/address": "^5.5.0",
    "@ethersproject/bignumber": "^5.5.0",
    "@ethersproject/bytes": "^5.5.0",
    "@ethersproject/contracts": "^5.5.0",
    "@ethersproject/networks": "^5.5.2",
    "@ethersproject/providers": "^5.5.3",
    "@ethersproject/solidity": "^5.5.0",
    "@ethersproject/units": "^5.5.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.10",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "@openzeppelin/contracts": "^4.5.0",
    "@tenderly/hardhat-tenderly": "^1.0.13",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "chalk": "^4.1.2",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.7.0",
    "hardhat": "^2.11.2",
    "hardhat-deploy": "^0.9.29",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "ipfs-http-client": "^54.0.2",
    "qrcode-terminal": "^0.12.0",
    "typechain": "7.0.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.11.25",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "chai": "^4.3.6",
    "dotenv": "^14.3.2",
    "eslint": "^8.9.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-config-standard-kit": "^0.15.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "hardhat-gas-reporter": "^1.0.8",
    "mocha": "^9.2.1",
    "node-watch": "^0.7.3",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "rlp": "^2.2.7",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.20",
    "ts-node": "^10.5.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  }
}
